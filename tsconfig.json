{
  "compilerOptions": {
    "target": "esnext",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": [
    "**/*.d.ts",
    "**/*.js"
  ],
  "exclude": [
    "dist"
  ]
}
